/* This is the game rock-paper-scissors, with the "Bing Bang Theory Lizard, Spock */

#include <iostream>
#include <stdlib.h>
#include <time.h>

int main()
{
	srand(time(NULL));

	int computer = rand() % 5 + 1;
	int user = 0;

	std::string userChoice;
	std::string computerChoice;

	std::cout << "=========================================\n";
	std::cout << "====Rock Paper Scissors Lizard Spock ====\n";
	std::cout << "==The Big Bang Theory Sheldon's Edition==\n";
	std::cout << "=========================================\n";

	//ask for user input
	std::cout << "1) Rock\n";
	std::cout << "2) Paper\n";
	std::cout << "3) Scissors\n";
	std::cout << "4) Lizard\n";
	std::cout << "5) Spock\n";
	std::cout << "Shoot!\n\n";

	std::cout << "Your pick (1,2,3,4,5): ";
	std::cin >> user;
	std::cout << "\n";

	//checks for invalid input
	if (user <= 0 || user >= 6) {
		std::cout << "\nInvalid Input, Computer Wins!, Try again.\n";
	}

	//changes number to character string for display
	//users choice
	if (user == 1) {
		userChoice = "Rock";
	}
	else if (user == 2) {
		userChoice = "Paper";
	}
	else if (user == 3) {
		userChoice = "Scissors";
	}
	else if (user == 4) {
		userChoice = "Lizard";
	}
	else if (user == 5) {
		userChoice = "Spock";
	}
	else if (user <= 0 || user >= 6) { //displays if user enter invalid input
		userChoice = ":(";
	}

	//computers choice
	if (computer == 1) {
		computerChoice = "Rock";
	}
	else if (computer == 2) {
		computerChoice = "Paper";
	}
	else if (computer == 3) {
		computerChoice = "Scissors";
	}
	else if (computer == 4) {
		computerChoice = "Lizard";
	}
	else if (computer == 5) {
		computerChoice = "Spock";
	}

	//displays player and computer input
	std::cout << "Your choice: " << userChoice << "\n";
	std::cout << "Computers choice: " << computerChoice << "\n";

	//checks for user victory results
	if (user == 1 && computer == 4) {
		std::cout << "Rock crushes Lizard!, You Win!\n";
	} 
	else if (user == 1 && computer == 3) {
		std::cout << "Rock crushes Scissors, You Win!\n";
	}
	else if (user == 2 && computer == 1) {
		std::cout << "Paper covers Rock, You Win!\n";
	}
	else if (user == 2 && computer == 5) {
		std::cout << "Paper disproves Spock, You Win!\n";
	}
	else if (user == 3 && computer == 2) {
		std::cout << "Scissors cuts paper, You Win!\n";
	}
	else if (user == 3 && computer == 4) {
		std::cout << "Scissors decapitates Lizard, You Win!\n";
	}
	else if (user == 4 && computer == 5) {
		std::cout << "Lizard poisons Spock, You Win!\n";
	}
	else if (user == 4 && computer == 2) {
		std::cout << "Lizard eats paper, You Win!\n";
	}
	else if (user == 5 && computer == 3) {
		std::cout << "Spock smashes scissors, You Win!\n";
	}
	else if (user == 5 && computer == 1) {
		std::cout << "Spock vaporizes Rock, You Win!\n";
	}

	//checks if computer wins
	if (computer == 1 && user == 4) {
		std::cout << "Rock crushes Lizard!, Computer Win!\n";
	}
	else if (computer == 1 && user == 3) {
		std::cout << "Rock crushes Scissors, Computer Win!\n";
	}
	else if (computer == 2 && user == 1) {
		std::cout << "Paper covers Rock, Computer Win!\n";
	}
	else if (computer == 2 && user == 5) {
		std::cout << "Paper disproves Spock, Computer Win!\n";
	}
	else if (computer == 3 && user == 2) {
		std::cout << "Scissors cuts paper, Computer Win!\n";
	}
	else if (computer == 3 && user == 4) {
		std::cout << "Scissors decapitates Lizard, Computer Win!\n";
	}
	else if (computer == 4 && user == 5) {
		std::cout << "Lizard poisons Spock, Computer Win!\n";
	}
	else if (computer == 4 && user == 2) {
		std::cout << "Lizard eats paper, Computer Win!\n";
	}
	else if (computer == 5 && user == 3) {
		std::cout << "Spock smashes scissors, Computer Win!\n";
	}
	else if (computer == 5 && user == 1) {
		std::cout << "Spock vaporizes Rock, Computer Win!\n";
	}

	//Displays tie message
	if (user == computer) {
		std::cout << "It's a tie!\n";
	}

	//final thank you and good bye message
	std::cout << "\nThanks for playing Rock-Paper-Scissor-Lizard-Spock\n";
	std::cout << "Please come again!!\n\n";

	return 0;
}
